@model LeaveTypeVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create leave type</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
